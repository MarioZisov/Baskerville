@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">Здравейте @this.User.Identity.GetUserName()! <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
                <li>@Html.ActionLink("Смяна на парола", "ChangePassword", "Manage")</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Изход</a></li>
            </ul>
        </li>
    </ul>
    }
}
