<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Baskerville", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (this.User.IsInRole("Admin") || this.User.IsInRole("Owner") || this.User.IsInRole("Manager"))
                    {
                        <li>@Html.ActionLink("Статистика", "Index", "Statistics")</li>
                    }                  

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="true">Абонати <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Списък", "Index", "Subscribers")</li>
                            <li>@Html.ActionLink("Съобщение", "Message", "Subscribers")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Продукти", "Index", "Products")</li>
                    <li>@Html.ActionLink("Събития", "Index", "Events")</li>
                    <li>@Html.ActionLink("Промоции", "Index", "Promotions")</li>
                    <li>@Html.ActionLink("Новини", "Index", "News")</li>
                    @if (this.User.IsInRole("Admin") || this.User.IsInRole("Owner"))
                    {
                        <li>@Html.ActionLink("Потребители", "Index", "Users")</li>
                    }
                </ul>
                    @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Baskerville</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
