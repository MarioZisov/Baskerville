@using Baskerville.Models.ViewModels
@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Продукти";
}

<h2>@ViewBag.Title</h2>
<hr />
<br />
<br />
<table id="products" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Име</th>
            <th>Публично</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.NameBg</td>
                <td>@(product.IsPublic ? "Да" : "Не")</td>                
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#products").DataTable({
                "oLanguage": {
                    "sSearch": "Търси",
                    "sZeroRecords": "Няма намерени резултати",
                    "sInfoFiltered": "- филтрирано от общо _MAX_ записа",
                    "sInfo": "Страница _PAGE_ от _PAGES_ (_TOTAL_ резултата)",
                    "sInfoEmpty": "Няма записи",
                    "sLengthMenu": "Показвай _MENU_ резултата на страница",
                    "oPaginate": {
                        "sNext": "Следваща",
                        "sPrevious": "Предишна"
                    }
                }
            });           
        })
    </script>
}