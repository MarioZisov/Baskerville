@using Baskerville.Models.ViewModels
@model IEnumerable<SubscriberViewModel>

@{
    ViewBag.Title = "Абонати";
}

<h2>Абонати</h2>

<table id="subscribers" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Имейл адрес</th>
            <th>Дата на присъединяване</th>
            <th>Изтрий</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subscriber in Model)
        {
            <tr>
                <td>@subscriber.Email</td>
                <td>@subscriber.SubscriptionDate.ToShortDateString()</td>
                <td>
                    <button subscriber-id="@subscriber.Id" subssubscriber-email="@subscriber.Email" class="btn-link js-delete">Премахни</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#subscribers").DataTable({
                "oLanguage": {
                    "sSearch": "Търси",                    
                    "sZeroRecords": "Няма намерени резултати",
                    "sInfoFiltered": "- филтрирано от общо _MAX_ записа",
                    "sInfo": "Страница _PAGE_ от _PAGES_ (_TOTAL_ резултата)",
                    "sInfoEmpty": "Няма записи",
                    "sLengthMenu": "Показвай _MENU_ резултата на страница",
                    "oPaginate": {
                        "sNext": "Следваща",
                        "sPrevious": "Предишна"
                    }
                }
            });

            $("#subscribers").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Сигурни ли сте, че искате да изтриете абонат с имейл " + button.attr("subssubscriber-email") + "?", function (result) {
                    if (result) {
                        $.ajax({
                            method: "POST",
                            url: "/subscribers/delete",
                            ajaxasync: true,
                            data: { id: button.attr("subscriber-id")},
                            success: function () {
                                button.parents("tr").remove();
                            }
                        })
                    }
                })
            })
        })
    </script>
}