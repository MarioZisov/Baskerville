@using Baskerville.Models.ViewModels
@model IEnumerable<SubscriberViewModel>

@{
    ViewBag.Title = "Абонати";
}

<h2>Абонати</h2>

<table id="subscribers" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Имейл адрес</th>
            <th>Дата на присъединяване</th>
            <th>Изтрий</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subscriber in Model)
        {
            <tr>
                <td>@subscriber.Email</td>
                <td>@subscriber.SubscriptionDate.ToShortDateString()</td>
                <td>
                    <button subscriber-id="@subscriber.Id" subssubscriber-email="@subscriber.Email" class="btn-link js-delete">Премахни</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#subscribers .js-delete").on("click", function () {
                var button = $(this);

                bootbox.confirm("Сигурни ли сте, че искате да истриете абонат с имейл " + button.attr("subssubscriber-email") + "?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/subscribers/" + button.attr("subscriber-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        })
                    }
                })
            })
        })
    </script>
}